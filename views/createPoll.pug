extends layout

block content
  h2=title
  form.form(action="/create" method="POST")
    label(for="title") Title
    input(type="text" name="title" placeholder="Poll Title" required)
    label(for="options") Options
    textarea(name="options" cols="30" placeholder="Please write your options separated by a forward slash character '/'" required)
    input(type="submit" value="Create" class="button")
